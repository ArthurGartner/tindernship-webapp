<div class="section" id="student-login">
    <div class="box">
        <h1 class="title">Student Login</h1>
        <hr/>
        <div class="form">
            <div class="notification is-primary" id="error">
                <button id="errorclose" class="delete"></button>
                <p id="errormsg"></p>
            </div>
            <div class="field">
                <label class="label">Username</label>
                <div class="control">
                    <input class="input" type="text" id="username" placeholder="Username" required>
                </div>
            </div>
            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" id="password" type="password" required>
                </div>
            </div>
            <div id="two-buttons">
                <div class="field">
                    <button class="button is-success" id="login">Login</button>
                    <button class="button is-primary" onclick="showAlert()">Forgot Password</button>
                </div>
                <script>
                    function showAlert() {
                      alert("To reset your password please contact your Citadel Professor.");
                    }
                </script>
            </div>
            <br>
            <div class="field" style="text-align:center">
                <a href="/register" class="button is-info" style="width:45%">Register</a>
            </div>
            <div id="csrf"><%= form_authenticity_token %></div>
        </div>
    </div>
</div>

<%= javascript_pack_tag 'studentlogin' %>